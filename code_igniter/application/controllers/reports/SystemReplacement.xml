<report>
	<details>
		<report_name>System Replacement</report_name>
		<report_display_in_menu>y</report_display_in_menu>
		<report_sql><![CDATA[SELECT system.id AS `system.id`, system.icon AS `system.icon`, system.type AS `system.type`, system.name AS `system.name`, system.domain AS `system.domain`, system.ip AS `system.ip`, system.manufacturer AS `system.manufacturer`, system.model AS `system.model`, system.serial AS `system.serial`, system.purchase_date AS `system.purchase_date`, oa_location.name AS `oa_location.name`, oa_org.name as `oa_org.name` FROM system LEFT JOIN oa_group_sys ON (oa_group_sys.system_id = system.id) LEFT JOIN oa_location ON (system.location_id = oa_location.id) LEFT JOIN oa_org ON (system.org_id = oa_org.id) WHERE oa_group_sys.group_id = @group ORDER BY system.name]]></report_sql>
